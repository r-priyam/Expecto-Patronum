{
	"name": "expecto-patronum",
	"version": "0.1.0",
	"private": true,
	"license": "MPL-2.0",
	"author": "r-priyam <roy_priyam@outlook.com>",
	"type": "module",
	"main": "dist/ExpectoPatronum.js",
	"scripts": {
		"build": "rimraf dist tsc -b src",
		"dev": "rimraf dist && yarn build && yarn start",
		"dev:watch": "tsc-watch -b src --onSuccess \"yarn start\"",
		"format": "prettier --write \"src/**/*.ts\"",
		"lint": "eslint src --ext ts --fix",
		"changelog": "node scripts/changelog.mjs",
		"release": "bumpp --execute \"yarn changelog\" --commit 'chore(release): v'",
		"start": "node --enable-source-maps dist/ExpectoPatronum.js",
		"watch": "tsc -b src -w"
	},
	"prettier": "@sapphire/prettier-config",
	"dependencies": {
		"@sapphire/decorators": "^4.3.4",
		"@sapphire/discord-utilities": "^2.10.3",
		"@sapphire/discord.js-utilities": "^4.9.4",
		"@sapphire/fetch": "^2.3.1",
		"@sapphire/framework": "next",
		"@sapphire/plugin-logger": "^2.2.1",
		"@sapphire/plugin-subcommands": "^2.2.0",
		"@sapphire/time-utilities": "^1.7.4",
		"@sapphire/type": "^2.2.0",
		"@sapphire/utilities": "^3.6.2",
		"discord.js": "^13.6.0",
		"postgres": "^3.0.5",
		"reflect-metadata": "^0.1.13",
		"yaml": "^2.0.0"
	},
	"devDependencies": {
		"@mikro-orm/sql-highlighter": "^1.0.1",
		"@sapphire/eslint-config": "^4.3.3",
		"@sapphire/plugin-hmr": "^1.2.0",
		"@sapphire/prettier-config": "^1.4.2",
		"@sapphire/ts-config": "^3.3.4",
		"@types/node": "^17.0.23",
		"@types/rimraf": "^3",
		"@types/ws": "^8.5.3",
		"@typescript-eslint/eslint-plugin": "^5.19.0",
		"@typescript-eslint/parser": "^5.19.0",
		"bumpp": "^7.1.1",
		"discord-api-types": "^0.31.1",
		"eslint": "^8.13.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"eslint-plugin-unicorn": "^42.0.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.6.2",
		"rimraf": "^3.0.2",
		"tsc-watch": "^5.0.3",
		"typescript": "^4.6.3"
	},
	"imports": {
		"#root/*": "./dist/*.js",
		"#lib/*": "./dist/lib/*.js",
		"#utils/*": "./dist/lib/utils/*.js"
	},
	"packageManager": "yarn@3.2.0"
}
