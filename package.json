{
	"name": "spectre",
	"version": "1.0.0",
	"private": true,
	"license": "MPL-2.0",
	"author": "r-priyam <roy_priyam@outlook.com>",
	"type": "module",
	"main": "dist/Spectre.js",
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch --onSuccess \"node --enable-source-maps dist/Spectre.js\"",
		"format": "prettier --write \"src/**/*.ts\"",
		"lint": "eslint src --ext ts --fix",
		"start": "NODE_ENV=production node --enable-source-maps dist/Spectre.js",
		"typecheck": "tsc -b src",
		"watch": "tsup --watch"
	},
	"prettier": "@sapphire/prettier-config",
	"eslintConfig": {
		"extends": "@sapphire"
	},
	"dependencies": {
		"@sapphire/decorators": "^4.3.4",
		"@sapphire/discord-utilities": "^2.10.3",
		"@sapphire/discord.js-utilities": "^4.9.4",
		"@sapphire/fetch": "^2.3.1",
		"@sapphire/framework": "next",
		"@sapphire/plugin-logger": "^2.2.1",
		"@sapphire/plugin-subcommands": "^2.2.0",
		"@sapphire/time-utilities": "^1.7.4",
		"@sapphire/type": "^2.2.0",
		"@sapphire/utilities": "^3.6.2",
		"discord-api-types": "^0.26.1",
		"discord.js": "^13.6.0",
		"dotenv-cra": "^3.0.2",
		"reflect-metadata": "^0.1.13"
	},
	"devDependencies": {
		"@sapphire/eslint-config": "^4.3.3",
		"@sapphire/prettier-config": "^1.4.2",
		"@sapphire/ts-config": "^3.3.4",
		"@swc/core": "^1.2.162",
		"@types/eslint": "^8",
		"@types/node": "^17.0.0",
		"@types/ws": "^8.5.3",
		"eslint": "^8.12.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.6.1",
		"tsup": "^5.12.2",
		"typescript": "^4.6.3"
	},
	"imports": {
		"#root/*": "./dist/*.js",
		"#lib/*": "./dist/lib/*.js",
		"#utils/*": "./dist/lib/utils/*.js",
		"#structures/*": "./dist/structures/*.js"
	},
	"packageManager": "yarn@3.2.0"
}
