{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"allowJs": true,
		"outDir": "../dist",
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"#root/*": ["*"],
			"#lib/*": ["lib/*"],
			"#utils/*": ["lib/utils/*"],
			"#classes/*": ["lib/classes/*"]
